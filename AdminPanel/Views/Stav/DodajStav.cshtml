@model AdminPanel.Areas.Identity.Data.Stav;
@using AdminPanel.Areas.Identity.Data;

@{
    ViewData["Title"] = "Креирај";
    List<Clan> clanovi = ViewBag.Clanovi;
    Propis propis = ViewBag.Propis;
    List<Propis> propisi = ViewBag.Propisi;
}
<h1 style="margin-left:3%;">Креирај став</h1>
@if (ViewBag.Msg != null)
{
    <p>@ViewBag.Msg</p>
}

<hr />
<div class="row" style="margin-left:2%;">
    <div class="col-md-4">
        <form asp-action="DodajStav">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Број става</label>
                <select name="Naziv">
                    <option value="Став 1">Став 1</option>
                    <option value="Став 2">Став 2</option>
                    <option value="Став 3">Став 3</option>
                    <option value="Став 4">Став 4</option>
                    <option value="Став 5">Став 5</option>
                    <option value="Став 6">Став 6</option>
                    <option value="Став 7">Став 7</option>
                    <option value="Став 8">Став 8</option>
                    <option value="Став 9">Став 9</option>
                    <option value="Став 10">Став 10</option>
                    <option value="Став 11">Став 11</option>
                    <option value="Став 12">Став 12</option>
                </select>
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Текст</label>
                <textarea name="Tekst"></textarea>
                <script>
                    tinymce.init({
                        selector: 'textarea',
                        plugins: 'autoresize preview a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
                        autoresize_on_init: false,
                        toolbar: 'a11ycheck preview addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
                        toolbar_mode: 'floating',
                        tinycomments_mode: 'embedded',
                        tinycomments_author: 'Author name'
                    });
                </script>
                <br />
                <span asp-validation-for="Tekst" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Члан коме припада</label>
                <select name="IdClan" class="form-control">
                    @foreach (Clan c in clanovi)
                    {
                        <option value="@c.Id">@Html.Raw(c.Naziv)</option>
                    }
                </select>
                <span asp-validation-for="IdClan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Креирај" class="btn btn-primary" />
            </div>
            <a asp-controller="Home"  asp-action="Index" asp-route-id="1" asp-route-idRubrika="1">Врати се</a>
        </form>
    </div>
</div>