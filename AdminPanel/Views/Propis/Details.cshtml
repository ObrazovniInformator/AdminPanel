@model AdminPanel.Areas.Identity.Data.Propis
@using AdminPanel.Areas.Identity.Data;
@{
    ViewData["Title"] = "Details";
    Rubrika rubrika = (Rubrika)ViewBag.Rubrika;
    Podrubrika podrubrika = (Podrubrika)ViewBag.Podrubrika;
}

<h1 style="margin-left:5%;">Сви подаци из прописа</h1>

<div style="margin-left:5%; margin-bottom:50px;">
    @Html.ActionLink("Измени", "Edit", new { id = Model.Id }) |
    <a href="~/Propis/Index/@rubrika.ID/@podrubrika.ID">Врати се на листу прописа</a>
</div>

<div style="margin-left:5%;">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Наслов")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naslov)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Рубрика")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayName(rubrika.NazivRubrike)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Подрубрика")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayName(podrubrika.NazivPodrubrike)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Гласило и датум објављивања")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GlasiloIDatumObjavljivanja)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Врста прописа")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VrstaPropisa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Доносилац")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Donosilac)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Ниво важења")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NivoVazenja)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Датум ступања на снагу верзије прописа")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumStupanjaNaSnaguVerzijePropisa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Датум престанка верзије")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumPrestankaVerzije)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Датум објављивања верзије")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumObjavljivanjaVerzije)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Датум објављивања основног текста")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumObjavljivanjaOsnovnogTeksta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Датум ступања на снагу међународног уговора")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumStupanjaNaSnaguMeđunarodnogUgovora)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Датум ступања на снагу основног текста прописа")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumStupanjaNaSnaguOsnovnogTekstaPropisa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Датум престанка важења прописа")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumPrestankaVazenjaPropisa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Датум почетка примене")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumPocetkaPrimene)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Правни основ за доношење прописа")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PravniOsnovZaDonosenjaPropisa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Норма основа за доношење")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NormaOsnovaZaDonosenje)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Пропис који је престао да важи")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PropisKojiJePrestaoDaVazi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Норма основа за престанак важења")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NormaOsnovaZaPrestanakVazenja)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Датум престанка важења правног претходника")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumPrestankaVazenjaPravnogPrethodnika)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Историјска верзија прописа")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IstorijskaVerzijaPropisa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Напомена")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Napomena)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Референца на пропис")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReferencaNaPropis)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Напомена гласника")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NapomeneGlasnika)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Текст прописа")
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(@Model.TekstPropisa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Преамбула")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preambula)
        </dd>
    </dl>
</div>
