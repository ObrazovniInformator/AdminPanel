@model AdminPanel.Areas.Identity.Data.PodrubrikaSM
@using AdminPanel.Areas.Identity.Data;
@{
    ViewData["Title"] = "CreatePodrubrika";
    List<RubrikaSM> rubrikeSM = (List<RubrikaSM>)ViewBag.RubrikeSM;
}

<h1 style="margin-left:6.5%;">Креирај подрубрику за службено мишљење</h1>
@if (ViewBag.Msg != null)
{
    <h4 style="color:green; margin-left:5%;">@ViewBag.Msg</h4>
}
<hr />
<div class="row" style="margin-left:5%;">
    <div class="col-md-4">
        <form asp-action="CreatePodrubrika">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Назив</label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Рубрика</label>
                <select name="IdRubrika" class="form-control">
                    @foreach (RubrikaSM rsm in rubrikeSM)
                    {
                        <option value="@rsm.Id">@rsm.Naziv</option>
                    }
                </select>
                <span asp-validation-for="IdRubrika" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Креирај подрубрику за службено мишљење" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index">Врати се на листу службених мишљења</a>
            </div>
        </form>
    </div>
</div>