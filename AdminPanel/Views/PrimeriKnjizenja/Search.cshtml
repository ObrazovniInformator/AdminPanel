@model IEnumerable<AdminPanel.Areas.Identity.Data.PrimeriKnjizenja>
@using AdminPanel.Areas.Identity.Data;
@{
    ViewData["Title"] = "Search";
    List<Propis> propisi = ViewBag.Propisi;
    List<Clan> clanovi = ViewBag.Clanovi;
    List<Stav> stavovi = ViewBag.Stavovi;
    List<Tacka> tacke = ViewBag.Tacke;
}

<style>
    @@media (min-width: 1600px) {
        .container {
            max-width: 1600px;
        }
    }

    #sidebar-wrapper {
        font-size: 1.3rem !important;
    }
</style>
<h1 style=" margin-left:38%;">Списак Примера књижења</h1>
<div style="margin-left:10%">
    <form asp-action="Search">
        <div class="form-group">
            <label class="control-label">Наслов</label>
            <input name="Naslov" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Тражи" class="btn btn-primary" />
        </div>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Наслов")
            </th>
            <th>
                @Html.DisplayName("Поднаслов")
            </th>
            <th>
                @Html.DisplayName("Напомена")
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naslov)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Podnaslov)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Napomena)
                </td>
                <td>
                    @Html.ActionLink("Измени", "Edit", new { id = item.Id }) |<br />
                    @Html.ActionLink("Сви подаци", "Details", new { id = item.Id }) |<br />
                </td>
            </tr>
        }
    </tbody>
</table>