@model AdminPanel.Areas.Identity.Data.RubrikaPK

@{
    ViewData["Title"] = "CreateRubrika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="margin-left:6.5%;">Креирај рубрику за пример књижења</h1>
@if (ViewBag.Msg != null)
{
    <h4 style="color:green; margin-left:5%;">@ViewBag.Msg</h4>
}
<hr />
<div class="row" style="margin-left:5%; margin-bottom:50px;">
    <div class="col-md-4">
        <form asp-action="CreateRubrika">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Назив</label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Креирај рубрику за пример књижења" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index">Врати се на листу примера књижења</a>
            </div>
        </form>
    </div>
</div>