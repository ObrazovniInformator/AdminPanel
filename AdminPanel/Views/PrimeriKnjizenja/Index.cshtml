@model PrimeriKnjizenjaViewModel
@using AdminPanel.Areas.Identity.Data;
@{
    ViewData["Title"] = "Index";
    int idRubrika = ViewBag.IdRubrika;
}

<style>
    @@media (min-width: 1600px) {
        .container {
            max-width: 1600px;
        }
    }

    #sidebar-wrapper {
        font-size: 1.3rem !important;
    }
</style>
<h1 style=" margin-left:38%;">Списак Примери књижења</h1>
<div style="margin-left:10%">
    <form asp-action="Search">
        <div class="form-group">
            <label class="control-label">Наслов</label>
            <input name="Naslov" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Тражи" class="btn btn-primary" />
        </div>
    </form>
</div>
<p>
    <a href="~/PrimeriKnjizenja/CreateRubrika/@idRubrika" style="font-size:25px;" class="btn btn-block btn-danger">Креирај рубрику за пример књижења</a>
   
    <a href="~/PrimeriKnjizenja/Create/@idRubrika" style="font-size:25px;" class="btn btn-block btn-danger">Креирај пример књижења</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label class="control-label">Наслов</label>
            </th>
            <th>
                <label class="control-label">Поднаслов</label>
            </th>
            <th>
                <label class="control-label">Напомена</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PrimeriKnjizenjaList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naslov)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Podnaslov)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Napomena)
                </td>
                <td>
                    @Html.ActionLink("Сви подаци", "Details", new { id = item.Id }) |
                    <a href="~/PrimeriKnjizenja/Delete/@item.Id" onclick="return confirm('Да ли сте сигурни да желите да избришете Примери књижења - @item.Naslov ?')">Избриши</a>
                </td>
            </tr>
        }
    </tbody>
</table>
