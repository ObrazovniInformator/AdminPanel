@model AdminPanel.Areas.Identity.Data.Vest
@using AdminPanel.Areas.Identity.Data;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<RubrikaVesti> rubrike = ViewBag.ListaRubrikeV;
    //List<Propis> propisi = ViewBag.Propisi;
    //List<Clan> clanovi = ViewBag.Clanovi;
    //List<Stav> stavovi = ViewBag.Stavovi;
    //List<Tacka> tacke = ViewBag.Tacke;
    int idMax = ViewBag.IdMaxV;
    List<VestiKategorija> kategorije = ViewBag.Kategorije;
}

<h1 style="margin-left:6.5%;">Креирај Вест</h1>
@if(ViewBag.Msg != null)
{
<p style="margin-left:5%; color:green">@ViewBag.Msg</p>
}
<hr />
<div class="row" style="margin-left:5%">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Наслов</label>
                <input name="Naslov" class="form-control" />
                <span asp-validation-for="Naslov" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Сажетак</label>
                <textarea name="Sazetak"></textarea>
                <script>
                    tinymce.init({
                        selector: 'textarea',
                        plugins: 'autoresize preview a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
                        autoresize_on_init: false,
                        toolbar: 'a11ycheck preview addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
                        toolbar_mode: 'floating',
                        tinycomments_mode: 'embedded',
                        tinycomments_author: 'Author name'
                    });
                </script>
                <span asp-validation-for="Sazetak" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Текст</label>
                <textarea name="Tekst"></textarea>
                <script>
                    tinymce.init({
                        selector: 'textarea',
                        plugins: 'autoresize preview a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
                        autoresize_on_init: false,
                        toolbar: 'a11ycheck preview addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
                        toolbar_mode: 'floating',
                        tinycomments_mode: 'embedded',
                        tinycomments_author: 'Author name'
                    });
                </script>
                <span asp-validation-for="Tekst" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Дан у недељи (словима)</label>
                <input name="DanUNedelji" class="form-control" />
                <span asp-validation-for="DanUNedelji" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Дан у месецу (број)</label>
                <input name="DanUMesecu" class="form-control" />
                <span asp-validation-for="DanUMesecu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Месец (број)</label>
                <input name="Mesec" class="form-control" />
                <span asp-validation-for="Mesec" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Година (број)</label>
                <input name="Godina" class="form-control" />
                <span asp-validation-for="Godina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Рубрика</label>
                @*<select name="IdRubrikaVesti" class="form-control">
            @foreach (RubrikaVesti rv in rubrike)
            {
                <option value="@rv.Id">@rv.NazivRubrike</option>
            }
        </select>

        <span asp-validation-for="IdRubrikaVesti" class="text-danger"></span>*@
                <select asp-for="IdRubrikaVesti" class="form-control" asp-items='@(new SelectList(ViewBag.ListaRubrikeV,"Id","NazivRubrike"))'>
                </select>
                <select name="IdKategorija">
                    @foreach (VestiKategorija kat in kategorije)
                    {
                    <option value="@kat.Id">@kat.NazivKategorije</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Креирај" class="btn btn-primary" />
            </div>
            <div>
                <a href="~/Vesti/KreirajVezuPropisVest/@idMax" class="btn btn-success">Креирај још веза са прописом</a>
                <br />
                <a asp-action="Index">Врати се на листу вести</a>
            </div>
        </form>
    </div>
</div>

