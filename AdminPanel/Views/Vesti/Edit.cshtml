@model AdminPanel.Areas.Identity.Data.Vest
@using AdminPanel.Areas.Identity.Data;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<VestiKategorija> kategorije = ViewBag.Kategorija;
    VestiKategorija kv = ViewBag.kv;
}

<h1 style="margin-left:6.5%;">Измени Вест</h1>
<hr />
<div class="row" style="margin-left:5%; margin-bottom:50px;">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Наслов</label>
                <input asp-for="Naslov" class="form-control" value="@Model.Naslov" />
                <span asp-validation-for="Naslov" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Сажетак</label>
                <textarea name="Sazetak">@Model.Sazetak</textarea>
                <script>
                    tinymce.init({
                        selector: 'textarea',
                        plugins: 'autoresize preview a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
                        autoresize_on_init: false,
                        toolbar: 'a11ycheck preview addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
                        toolbar_mode: 'floating',
                        tinycomments_mode: 'embedded',
                        tinycomments_author: 'Author name'
                    });
                </script>
                <span asp-validation-for="Sazetak" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Текст</label>
                <textarea name="Tekst">@Model.Tekst</textarea>
                <script>
                    tinymce.init({
                        selector: 'textarea',
                        plugins: 'autoresize preview a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
                        autoresize_on_init: false,
                        toolbar: 'a11ycheck preview addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
                        toolbar_mode: 'floating',
                        tinycomments_mode: 'embedded',
                        tinycomments_author: 'Author name'
                    });
                </script>
                <span asp-validation-for="Tekst" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Дан у недељи</label>
                <input asp-for="DanUNedelji" value="@Model.DanUNedelji" class="form-control" />
                <span asp-validation-for="DanUNedelji" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Дан у месецу</label>
                <input asp-for="DanUMesecu" value="@Model.DanUMesecu" class="form-control" />
                <span asp-validation-for="DanUMesecu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Месец</label>
                <input asp-for="Mesec" value="@Model.Mesec" class="form-control" />
                <span asp-validation-for="Mesec" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Година</label>
                <input asp-for="Godina" value="@Model.Godina" class="form-control" />
                <span asp-validation-for="Godina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Категорија</label>
               <select asp-for="IdKategorija">
                   <option value="@kv.Id">@kv.NazivKategorije</option>
                   @foreach (VestiKategorija k in kategorije)
                   {
                       <option value="@k.Id">@k.NazivKategorije</option>
                   }
               </select>
                <span asp-validation-for="IdKategorija" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сачувај измене" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index">Врати се на листу вести</a>
            </div>
        </form>
    </div>
</div>



