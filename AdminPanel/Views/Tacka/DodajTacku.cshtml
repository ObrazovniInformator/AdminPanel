<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#IdClan").change(function () {

            var url = '@Url.Content("~/")' + "Tacka/GetStav";
            var ddlsource = "#IdClan";
            $.getJSON(url, { IdClan: $(ddlsource).val() }, function (data) {
                var items = '';
                $("#IdStav").empty();
                $.each(data, function (i, clan) {
                    items += "<option value='" + clan.value + "'>" + clan.text + "</option>";
                });
                $("#IdStav").html(items);
            });
        });
    });

</script>

