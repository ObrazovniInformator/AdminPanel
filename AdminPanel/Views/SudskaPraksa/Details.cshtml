@model AdminPanel.Areas.Identity.Data.SudskaPraksa
@using AdminPanel.Areas.Identity.Data;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    List<string> propisi = ViewBag.Propisi;
    List<string> clanovi = ViewBag.Clanovi;
    List<string> stavovi = ViewBag.Stavovi;
    List<string> tacke = ViewBag.Tacke;
    RubrikaSP rubrika = ViewBag.Rubrika;
    PodrubrikaSP podrubrika = ViewBag.Podrubrika;
    DonosilacSP donosilac = ViewBag.Donosilac;
}

<h1 style="margin-left:5%;">Сви подаци из судске праксе</h1>

<div style="margin-left:5%; margin-bottom:50px;">
    @Html.ActionLink("Измени", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Врати се на листу судских пракси</a>
</div>

<div>
    <hr />
    <dl class="row" style="margin-left:5%; margin-bottom:50px;">

        <dt class="col-sm-2">
            @Html.DisplayName("Наслов")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naslov)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Поднаслов")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Podnaslov)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Број")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Broj)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Датум")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Datum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Напомена")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Napomena)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Текст")
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(@Model.Tekst)
        </dd>
      
        @foreach (string p in propisi)
        {

                <dt class="col-sm-2">
                    @Html.DisplayName("Наслов прописа")
                </dt>
                <dd class="col-sm-10">
                    @p
                </dd>
        }

        @foreach (string c in clanovi)
        {
            <dt class="col-sm-2">
                @Html.DisplayName("Члан")
            </dt>
            <dd class="col-sm-10">
                @c
            </dd>
        }
        @foreach (string s in stavovi)
        {
            <dt class="col-sm-2">
                @Html.DisplayName("Став")
            </dt>
            <dd class="col-sm-10">
                @s <br />
            </dd>
        }
        @foreach (string t in tacke)
        {
            <dt class="col-sm-2">
                @Html.DisplayName("Тачка")
            </dt>
            <dd class="col-sm-10">
                @t <br />
            </dd>                   
         }

        <dt class="col-sm-2">
            @Html.DisplayName("Рубрика")
        </dt>
        <dd class="col-sm-10">
            @if(rubrika != null)
            { 
                @rubrika.Naziv
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Подрубрика")
        </dt>
        <dd class="col-sm-10">
            @if (podrubrika != null)
            {
                @podrubrika.Naziv
            }
         </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Доносилац")
        </dt>
        <dd class="col-sm-10">
            @if (donosilac != null)
            {
                @donosilac.Naziv
            }
        </dd>
    </dl>
</div>