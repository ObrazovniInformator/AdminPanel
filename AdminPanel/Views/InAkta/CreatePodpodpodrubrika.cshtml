@model AdminPanel.Areas.Identity.Data.PodpodpodrubrikaInAkta
@using AdminPanel.Areas.Identity.Data;
@{
    ViewData["Title"] = "CreatePodpodpodrubrika";
    List<PodpodrubrikaInAkta> podpodRubrikeIA = (List<PodpodrubrikaInAkta>)ViewBag.PodpodrubrikeIA;
}

<h1 style="margin-left:6.5%;">Креирај подподподрубрику за ин акта</h1>
@if (ViewBag.Msg != null)
{
    <h4 style="color:green; margin-left:5%;">@ViewBag.Msg</h4>
}
<hr />
<div class="row" style="margin-left:5%;">
    <div class="col-md-4">
        <form asp-action="CreatePodpodpodrubrika">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Назив</label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Подподрубрика</label>
                <select name="IdPodpodrubrika" class="form-control">
                    @foreach (PodpodrubrikaInAkta r in podpodRubrikeIA)
                    {
                        <option value="@r.Id">@r.Naziv</option>
                    }
                </select>
                <span asp-validation-for="IdPodpodrubrika" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Креирај подподподрубрику за ин акта" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index">Врати се на почетну страницу</a>
            </div>
        </form>
    </div>
</div>