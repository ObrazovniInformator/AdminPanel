@model AdminPanel.Areas.Identity.Data.RubrikaInAkta
@using AdminPanel.Areas.Identity.Data;
@{
    ViewData["Title"] = "CreateRubrika";
    List<InAktaPodvrsta> podvrsteIA = (List<InAktaPodvrsta>)ViewBag.PodvrsteIA;
}

<h1 style="margin-left:6.5%;">Креирај рубрику за ин акта</h1>
@if (ViewBag.Msg != null)
{
    <h4 style="color:green; margin-left:5%;">@ViewBag.Msg</h4>
}
<hr />
<div class="row" style="margin-left:5%;">
    <div class="col-md-4">
        <form asp-action="CreateRubrika">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Назив рубрике</label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Подврста</label>
                <select name="IdPodvrsta" class="form-control">
                    @foreach (InAktaPodvrsta r in podvrsteIA)
                    {
                        <option value="@r.Id">@r.Naziv</option>
                    }
                </select>
                <span asp-validation-for="IdPodvrsta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Креирај рубрику за ин акта" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index">Врати се на почетну страницу</a>
            </div>
        </form>
    </div>
</div>