}

<h1 style="margin-left:3%">Детаљи претплатника</h1>

<div>

    <hr />
    <dl class="row" style="margin-left:2%">

        <dt class="col-sm-2">
            @Html.DisplayName("Име")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Презиме")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prezime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("ПИБ")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PIB)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Корисничко име")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KorisnickoIme)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Лозинка")
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.Lozinka)*@
            @pretplatnik.Lozinka
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Број телефона")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrojTelefona)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Емаил")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Матични број")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaticniBroj)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Претплата")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pretplata)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Датум почетка претплате")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumPocetkaPretplate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Датум краја претплате")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumKrajaPretplate)
        </dd>
    </dl>
</div>
