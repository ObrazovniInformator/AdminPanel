@page
@model AdminPanel.Areas.Identity.Data.Role
@{
    ViewData["Title"] = "Nova rola";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Креирај улогу.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Име роле</label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
           
            <button type="submit" class="btn btn-primary">Креирање</button>
        </form>
    </div>
</div>
  